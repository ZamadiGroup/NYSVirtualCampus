  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx -r dotenv/config server/index.ts",
    "build": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "test": "vitest",
    "db:push": "drizzle-kit up:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit up:pg"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^3.0.3",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "memorystore": "^1.6.7",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.6",
    "esbuild": "^0.25.0",
    "tsx": "^4.21.0",
    "typescript": "5.6.3",
    "vitest": "^0.34.6"
  }
}
