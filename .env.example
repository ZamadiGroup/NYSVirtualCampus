# Database Configuration
# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# PostgreSQL connection (if using PostgreSQL instead of MongoDB)
# DATABASE_URL=postgresql://username:password@localhost:5432/nys_virtual_campus

# Session Configuration
SESSION_SECRET=your-secret-key-here-change-this-in-production

# JWT Configuration (if used)
JWT_SECRET=your-jwt-secret-key-here-change-this-in-production

# Environment
NODE_ENV=development
