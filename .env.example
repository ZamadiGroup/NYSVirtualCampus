# Server Configuration
# Port for the server to listen on (default: 5000)
PORT=5000

# Database Configuration
# MongoDB connection string
# IMPORTANT: Never commit actual credentials to version control!
# Replace 'username', 'password', 'cluster', and 'database' with your actual values
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# PostgreSQL connection (if using PostgreSQL instead of MongoDB)
# DATABASE_URL=postgresql://username:password@localhost:5432/nys_virtual_campus

# Session Configuration
SESSION_SECRET=your-secret-key-here-change-this-in-production

# JWT Configuration (if used)
JWT_SECRET=your-jwt-secret-key-here-change-this-in-production

# Environment
NODE_ENV=development
