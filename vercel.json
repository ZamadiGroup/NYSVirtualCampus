{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/index.mjs" },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ]
}
